{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
		"target": "ESNext",
		"module": "ESNext",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"src"
	]
}